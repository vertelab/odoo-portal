    <record id="contacts.res_partner_menu_config" model="ir.ui.menu">
        <field name="name">Configuration</field>
        <field name="category_id" ref="sales_team.group_sale_manager"/>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
    </record>
-->
    <record id="crm_rule_following_lead" model="ir.rule">
        <field name="name">See Following Activity</field>
        <field ref="crm.model_crm_lead" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('message_partner_ids','in',[user.partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('portal_crm.group_crm_following'))]"/>
    </record>
    
    <record id="crm_rule_following" model="ir.rule">
        <field name="name">See Following Activity</field>
        <field ref="crm.model_crm_activity_report" name="model_id"/>
        <field name="domain_force">['|',('user_id','=',user.id),('message_partner_ids','in',[user.partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('portal_crm.group_crm_following'))]"/>
    </record>

</data>


</odoo>
