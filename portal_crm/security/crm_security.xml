<?xml version="1.0" encoding="utf-8"?>

<odoo>
<data>
    <record id="portal_module_category" model="ir.module.category">
        <field name="name">Försäljning</field>
    </record>
    
    <record id="group_portal_crm" model="res.groups">
        <field name="name">Portal CRM</field>
        <field name="comment">Portal CRM members have specific access rights (such as record rules and restricted menus).
            They usually do not belong to the usual Odoo groups.</field>
    </record>
<!--
    <record id="portal_crm_user" model="res.users">
        <field name="groups_id" eval="[(4, ref('portal_crm.group_portal_crm'))]"/>
    </record>
-->

    
    <!-- Access Groups -->
    

    <record id="group_crm_following" model="res.groups">
        <field name="name">User: Crm Following Activity</field>
        <field name="category_id" ref="portal_module_category"/>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="implied_ids" eval="[(4, ref('portal_crm.group_portal_crm'))]"/>
    </record>
    



